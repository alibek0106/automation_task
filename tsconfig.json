{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "types": [
            "node",
            "@playwright/test"
        ],
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "useDefineForClassFields": true
    },
    "include": [
        "**/*.ts"
    ]
}